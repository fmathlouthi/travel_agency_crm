<!DOCTYPE html>

<title>Promotion</title>

{% block body %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ promotion.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promotion.description }}</td>
            </tr>
            <tr>
                <th>Exclusive</th>
                <td>{{ promotion.exclusive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StartsAt</th>
                <td>{{ promotion.startsAt ? promotion.startsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndsAt</th>
                <td>{{ promotion.endsAt ? promotion.endsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ promotion.createdAt ? promotion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ promotion.updatedAt ? promotion.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ promotion.image }}</td>
            </tr>
            <tr>
                <th>Linkpro</th>
                <td>{{ promotion.linkpro }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('promotion_index') }}">back to list</a>

    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>

    {{ include('promotion/_delete_form.html.twig') }}
{% endblock %}
