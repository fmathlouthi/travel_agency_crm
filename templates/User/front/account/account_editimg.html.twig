{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/css/dropify.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('admin/css/bootstrap-toggle.min.css') }}">
{% endblock %}



{% block member_editimg %}
    <div class="form_update_profil">
        <h3>Modifier l'image de profile</h3>
